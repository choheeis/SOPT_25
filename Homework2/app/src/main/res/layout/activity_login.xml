<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.Login.LoginActivity">

    <EditText android:id="@+id/etLOGINid"
              android:layout_width="230dp" android:layout_height="60dp" android:padding="8dp"
              tools:ignore="MissingConstraints" android:background="@drawable/border_square"
              android:textColorHint="#000000" android:hint="id" android:textSize="25sp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="250dp"/>

    <EditText android:id="@+id/etLOGINpw"
              android:layout_width="230dp" android:layout_height="60dp" android:padding="8dp"
              tools:ignore="MissingConstraints" android:background="@drawable/border_square"
              android:textColorHint="#000000" android:hint="password" android:textSize="25sp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/etLOGINid"
              android:layout_marginTop="15dp"/>

    <TextView android:id="@+id/tvLOGINsignup"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="회원가입" android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/etLOGINpw"
              app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
              android:layout_marginTop="15dp"/>

    <TextView android:id="@+id/tvLOGINlogin"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@+id/tvLOGINsignup"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginTop="20dp"
              tools:ignore="MissingConstraints" android:text="로그인" android:textColor="#000000" android:textSize="25sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>