<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="120dp"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
            android:id="@+id/v_followerItem_bar"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#C2BEBE"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:id="@+id/iv_followerItem_profile"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/chohee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_followerItem_bar"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="17dp"/>
    <TextView
            android:id="@+id/tv_followerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="choheeis"
            app:layout_constraintStart_toEndOf="@+id/iv_followerItem_profile"
            app:layout_constraintTop_toBottomOf="@+id/v_followerItem_bar"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"/>
    <TextView
            android:id="@+id/tv_followerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chohee Kim"
            android:textSize="25sp"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/iv_followerItem_profile"
            app:layout_constraintTop_toBottomOf="@+id/tv_followerId"
            android:layout_marginLeft="12dp"/>
    <ImageView
            android:id="@+id/iv_followerIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_person"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_followerItem_bar"
            android:layout_marginTop="20dp"
            android:layout_marginRight="17dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>