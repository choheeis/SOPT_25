<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.Signup.SignupActivity">

    <EditText android:id="@+id/etSIGNUPnm"
              android:layout_width="200dp" android:layout_height="60dp" android:padding="8dp"
              tools:ignore="MissingConstraints" android:background="@drawable/border_square"
              android:textColorHint="#000000" android:hint="name" android:textSize="25sp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="180dp"/>

    <EditText android:id="@+id/etSIGNUPid"
              android:layout_width="200dp" android:layout_height="60dp" android:padding="8dp"
              tools:ignore="MissingConstraints" android:background="@drawable/border_square"
              android:textColorHint="#000000" android:hint="id" android:textSize="25sp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/etSIGNUPnm"
              android:layout_marginTop="10dp"/>

    <EditText android:id="@+id/etSIGNUPpw"
              android:layout_width="200dp" android:layout_height="60dp" android:padding="8dp"
              tools:ignore="MissingConstraints" android:background="@drawable/border_square"
              android:textColorHint="#000000" android:hint="password" android:textSize="25sp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/etSIGNUPid"
              android:layout_marginTop="10dp"/>

    <EditText android:id="@+id/etSIGNUPpwcheck"
              android:layout_width="200dp" android:layout_height="60dp" android:padding="8dp"
              tools:ignore="MissingConstraints" android:background="@drawable/border_square"
              android:textColorHint="#000000" android:hint="password check" android:textSize="25sp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/etSIGNUPpw"
              android:layout_marginTop="10dp"/>

    <TextView android:id="@+id/tvSIGNUPsignup"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@+id/etSIGNUPpwcheck"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_marginTop="25dp"
              tools:ignore="MissingConstraints" android:text="회원가입" android:textColor="#000000" android:textSize="25sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>